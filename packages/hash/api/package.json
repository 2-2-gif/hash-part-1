{
  "name": "@hashintel/hash-api",
  "version": "0.1.0",
  "private": true,
  "description": "API and data store for HASH.dev",
  "repository": {
    "url": "https://github.com/hashintel/dev/packages/hash/api",
    "directory": "packages/hash/api"
  },
  "license": "GPL-3.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "yarn clean; yarn codegen; tsc -b",
    "clean": "rimraf './src/**/*.gen.*' ./dist/ ./tsconfig.tsbuildinfo",
    "clear-pg": "cd datastore/postgres && yarn refresh",
    "codegen": "graphql-codegen --config codegen.yml",
    "dev": "cross-env NODE_ENV=\"${NODE_ENV:-development}\" nodemon --config nodemon.json src/index.ts",
    "fix": "eslint --ext .ts --fix ./src/; eslint --ext .ts --fix ./datastore/",
    "postinstall": "yarn codegen && yarn --cwd 'datastore/postgres/' install # required for linting",
    "lint": "eslint --ext .ts ./src/ && eslint --ext .ts ./datastore/ && tsc --noEmit # @hashintel/hash-backend",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "jest",
    "ts-node": "node --max-old-space-size=2048 node_modules/.bin/ts-node --files --project tsconfig.json"
  },
  "dependencies": {
    "@apollo/client": "3.3.19",
    "@aws-sdk/client-s3": "3.38.0",
    "@aws-sdk/client-ses": "3.25.0",
    "@aws-sdk/s3-presigned-post": "3.38.0",
    "@aws-sdk/s3-request-presigner": "3.38.0",
    "@hashintel/block-protocol": "*",
    "@hashintel/hash-backend-utils": "*",
    "@hashintel/hash-shared": "*",
    "@types/lodash": "4.14.175",
    "@types/redis": "2.8.32",
    "ajv": "8.6.3",
    "apollo-datasource": "3.1.0",
    "apollo-server-errors": "3.1.0",
    "apollo-server-express": "2.24.1",
    "body-parser": "1.19.0",
    "connect-pg-simple": "6.2.1",
    "cors": "2.8.5",
    "cron": "1.8.2",
    "cross-env": "^7.0.3",
    "express": "4.17.1",
    "express-session": "1.17.2",
    "graphql": "15.5.0",
    "graphql-type-json": "0.3.2",
    "helmet": "4.6.0",
    "hot-shots": "8.5.0",
    "html-to-text": "8.0.0",
    "id128": "1.6.6",
    "jsonpath": "1.1.1",
    "lodash": "4.17.21",
    "nanoid": "3.1.23",
    "node-fetch": "^2.6.1",
    "nodemailer": "6.6.3",
    "oembed-providers": "https://github.com/iamcal/oembed",
    "passport": "0.4.1",
    "pg": "8.6.0",
    "prosemirror-model": "1.15.0",
    "prosemirror-state": "1.3.4",
    "prosemirror-transform": "1.3.3",
    "redis": "3.1.2",
    "rword": "3.2.0",
    "slonik": "24.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.4",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.0",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@types/connect-pg-simple": "4.2.4",
    "@types/cron": "1.7.3",
    "@types/express-session": "1.17.4",
    "@types/graphql-type-json": "0.3.2",
    "@types/html-to-text": "8.0.1",
    "@types/jest": "27.0.1",
    "@types/jsonpath": "0.2.0",
    "@types/node-fetch": "^2.5.10",
    "@types/nodemailer": "6.4.4",
    "@types/passport": "1.0.7",
    "@types/passport-strategy": "0.2.35",
    "@types/pg": "8.6.0",
    "@types/prosemirror-model": "1.13.2",
    "@types/prosemirror-transform": "1.1.4",
    "@types/rword": "3.0.0",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@typescript-eslint/parser": "4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "24.5.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-restricted-imports": "0.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "jest": "27.0.6",
    "nodemon": "2.0.12",
    "rimraf": "^3.0.2",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  }
}
