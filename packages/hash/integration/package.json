{
  "name": "@hashintel/hash-integration",
  "version": "0.1.0",
  "private": true,
  "description": "Integration tests for HASH.dev",
  "repository": {
    "url": "https://github.com/hashintel/dev/packages/hash/integration",
    "directory": "packages/hash/integration"
  },
  "license": "GPL-3.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "yarn clean; yarn codegen; tsc -b",
    "clean": "rimraf './src/**/*.gen.*' ./dist/ ./tsconfig.tsbuildinfo",
    "codegen": "graphql-codegen --config codegen.yml",
    "fix": "eslint --ext .ts --fix ./src/",
    "postinstall": "yarn codegen",
    "lint": "eslint --ext .ts ./src/ && tsc --noEmit",
    "mock-data": "yarn codegen && ts-node src/mockData/index.ts",
    "test": "jest --runInBand",
    "ts-node": "node --max-old-space-size=2048 node_modules/.bin/ts-node --files --project tsconfig.json"
  },
  "dependencies": {
    "@hashintel/hash-api": "*",
    "@hashintel/hash-backend-utils": "*",
    "dotenv": "10.0.0",
    "graphql": "15.5.0",
    "graphql-request": "3.4.0",
    "graphql-tag": "2.12.5",
    "graphql-type-json": "0.3.2",
    "pg": "8.7.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.4",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.0",
    "@graphql-codegen/typescript-graphql-request": "3.2.4",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@types/graphql-type-json": "0.3.2",
    "@types/jest": "27.0.1",
    "@types/prompts": "2.0.14",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "25.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-restricted-imports": "0.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "jest": "27.0.6",
    "rimraf": "^3.0.2",
    "ts-jest": "27.0.5",
    "ts-node": "10.4.0",
    "typescript": "4.5.2"
  }
}
