{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    // specifics
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noEmit": true,
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
  
    // overrides
    "lib": ["dom", "dom.iterable", "esnext"],  
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}