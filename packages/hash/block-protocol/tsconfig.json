{
  "compilerOptions": {
    // io
    "rootDir": "./src/",
    "outDir": "./dist/",

    // module spec
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // enable generation of .d.ts(.map) files
    "declaration": true,
    "declarationMap": true, // enables importers to jump to source

    // misc
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
