{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "lib": [
      "es2020", "ES2019"
    ],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}