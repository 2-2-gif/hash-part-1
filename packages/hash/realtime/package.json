{
  "name": "@hashintel/hash-realtime",
  "license": "GPL-3.0",
  "private": true,
  "version": "0.1.0",
  "description": "Realtime streaming update server from the HASH.dev datstore",
  "prettier": "@hashintel/prettier-config",
  "repository": {
    "url": "https://github.com/hashintel/dev/packages/hash/realtime",
    "directory": "packages/hash/realtime"
  },
  "main": "src/index.ts",
  "scripts": {
    "format": "eslint --ext .ts --fix ./src/; prettier --write --list-different './src/**/*'",
    "lint": "prettier --check './src/**/*' && eslint --ext .ts ./src/ && tsc --noEmit # @hashintel/hash-realtime",
    "build": "yarn clean; tsc -b",
    "clean": "rimraf ./dist/ ./tsconfig.tsbuildinfo",
    "dev": "NODE_ENV=development nodemon --config nodemon.json src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "ts-node": "node --max-old-space-size=2048 node_modules/.bin/ts-node --files --project tsconfig.json"
  },
  "dependencies": {
    "@hashintel/hash-backend-utils": "*",
    "slonik": "24.1.2"
  },
  "devDependencies": {
    "@types/node": "16.7.6",
    "nodemon": "2.0.12",
    "rimraf": "^3.0.2",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  }
}
