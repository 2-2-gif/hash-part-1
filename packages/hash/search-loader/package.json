{
  "name": "@hashintel/hash-search-loader",
  "license": "GPL-3.0",
  "private": true,
  "version": "0.1.0",
  "description": "Loads changes from the hash/realtime package stream into the search service",
  "prettier": "@hashintel/prettier-config",
  "repository": {
    "url": "https://github.com/hashintel/dev/packages/hash/search-loader",
    "directory": "packages/hash/search-loader"
  },
  "main": "src/index.ts",
  "scripts": {
    "postinstall": "yarn build",
    "format": "eslint --ext .ts --fix ./src/; prettier --write --list-different './src/**/*'",
    "lint": "prettier --check './src/**/*' && eslint --ext .ts ./src/ && tsc --noEmit # @hashintel/hash-search-loader",
    "build": "yarn clean; tsc -b",
    "clean": "rimraf ./dist/ ./tsconfig.tsbuildinfo",
    "dev": "cross-env NODE_ENV=\"${NODE_ENV:-development}\" nodemon --config nodemon.json src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "ts-node": "node --max-old-space-size=2048 node_modules/.bin/ts-node --files --project tsconfig.json"
  },
  "dependencies": {
    "@hashintel/hash-backend-utils": "*",
    "@opensearch-project/opensearch": "1.0.0",
    "hot-shots": "8.5.0",
    "slonik": "24.1.2"
  },
  "devDependencies": {
    "@types/node": "16.7.6",
    "nodemon": "2.0.12",
    "rimraf": "^3.0.2",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  }
}