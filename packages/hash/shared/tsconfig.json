{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    // specifics
    "baseUrl": ".",
    "outDir": "dist",
    // overrides
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noEmit": false,
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    "lib": [
      "es2020"
    ],
    "rootDir": "src",
    "composite": true,
  },
  "include": [
    "./src/**/*",
    "src/graphql/fragmentTypes.gen.json"
  ],
  "exclude": [
    "node_modules"
  ]
}