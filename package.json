{
  "private": true,
  "description": "HASH monorepo",
  "workspaces": [
    "packages/hash/backend-utils",
    "packages/hash/backend",
    "packages/hash/block-protocol",
    "packages/hash/blocks/*",
    "packages/hash/frontend",
    "packages/hash/integration",
    "packages/hash/prettier-config",
    "packages/hash/realtime",
    "packages/hash/shared"
  ],
  "scripts": {
    "// 01": "",
    "// ---------------Workspaces ---------------": "",
    "// 02": "",
    "ws:hash-backend": "yarn workspace @hashintel/hash-backend",
    "ws:hash-integration": "yarn workspace @hashintel/hash-integration",
    "ws:hash-frontend": "yarn workspace @hashintel/hash-frontend",
    "ws:hash-shared": "yarn workspace @hashintel/hash-shared",
    "ws:hash-realtime": "yarn workspace @hashintel/hash-realtime",
    "ws:hash-backend-utils": "yarn workspace @hashintel/hash-backend-utils",
    "// 03": "",
    "// ---------------Install & serve ---------------": "",
    "// 04": "",
    "seed-db": "yarn ws:hash-backend clear-pg && yarn ws:hash-integration mock-data",
    "serve:hash-frontend": "yarn ws:hash-frontend dev",
    "serve:hash-backend": "cross-env DOCKER_BUILDKIT=1 docker-compose -f packages/hash/docker/docker-compose.yml up",
    "serve:hash-backend-statsd": "cross-env DOCKER_BUILDKIT=1 docker-compose -f docker/docker-compose.yml -f docker/docker-compose-statsd-override.yml up",
    "serve:hash-backend-test": "cross-env DOCKER_BUILDKIT=1 HASH_PG_DATABASE=integration_tests NODE_ENV=test docker-compose -f packages/hash/docker/docker-compose.yml up",
    "codegen": "yarn ws:hash-backend codegen && yarn ws:hash-frontend codegen && yarn ws:hash-integration codegen && yarn ws:hash-shared codegen",
    "rebuild:backend": "cross-env DOCKER_BUILDKIT=1 docker-compose -f packages/hash/docker/docker-compose.yml build",
    "new:block": "node packages/hash/blocks/create-block",
    "// 05": "",
    "// --------------- Blocks & Demo ---------------": "",
    "// 06": "",
    "build-blocks": "concurrently \"yarn:build-block:*\"",
    "build-block:code": "yarn workspace @hashintel/block-code build",
    "build-block:divider": "yarn workspace @hashintel/block-divider build",
    "build-block:embed": "yarn workspace @hashintel/block-embed build",
    "build-block:header": "yarn workspace @hashintel/block-header build",
    "build-block:html-para": "yarn workspace @hashintel/block-html-para build",
    "build-block:image": "yarn workspace @hashintel/block-image build",
    "build-block:paragraph": "yarn workspace @hashintel/block-paragraph build",
    "build-block:person": "yarn workspace @hashintel/block-person build",
    "build-block:table": "yarn workspace @hashintel/block-table build",
    "build-block:video": "yarn workspace @hashintel/block-video build",
    "serve-blocks": "concurrently \"yarn:serve-block:*\"",
    "serve-block:code": "yarn workspace @hashintel/block-code serve",
    "serve-block:divider": "yarn workspace @hashintel/block-divider serve",
    "serve-block:embed": "yarn workspace @hashintel/block-embed serve",
    "serve-block:header": "yarn workspace @hashintel/block-header serve",
    "serve-block:html-para": "yarn workspace @hashintel/block-html-para serve",
    "serve-block:image": "yarn workspace @hashintel/block-image serve",
    "serve-block:paragraph": "yarn workspace @hashintel/block-paragraph serve",
    "serve-block:person": "yarn workspace @hashintel/block-person serve",
    "serve-block:table": "yarn workspace @hashintel/block-table serve",
    "serve-block:video": "yarn workspace @hashintel/block-video serve",
    "demo": "docker volume create hash-dev-pg && docker-compose -f packages/hash/backend/docker-compose.yml up -d && sleep 5 && yarn refresh-pg && yarn serve:hash-frontend",
    "// 07": "",
    "// ---------------Linting/Formatting/Tooling------": "",
    "// 08": "",
    "format": "yarn workspaces run format",
    "lint": "yarn workspaces run lint",
    "install-hooks": "bash hooks/install.sh",
    "// 09": "",
    "// --------------- Tests ---------------": "",
    "test-integration": "yarn ws:hash-integration test",
    "test-frontend": "yarn ws:hash-frontend test",
    "// 10": ""
  },
  "devDependencies": {
    "concurrently": "6.2.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "4.1.5",
    "serve": "12.0.1"
  }
}
